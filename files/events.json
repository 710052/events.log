// Parser function
const parseEvents = () => {
    try {
        // In production, this would fetch from events.json
        const events = eventsData.events;

        // Flatten the events array and sort by date
        const flattenedEvents = events.flatMap(category => category.events);
        return flattenedEvents.sort((a, b) => {
            const [aDay, aMonth] = a.date.split('.').map(Number);
            const [bDay, bMonth] = b.date.split('.').map(Number);
            return aMonth - bMonth || aDay - bDay;
        });
    } catch (error) {
        console.error('Error parsing events:', error);
        return [];
    }
};

// Usage in terminal component:
const events = parseEvents();

// Example filter functions
const getEventsByType = (type) =>
    events.filter(event => event.type.toLowerCase() === type.toLowerCase());

const searchEvents = (term) =>
    events.filter(event =>
        event.name.toLowerCase().includes(term.toLowerCase()) ||
        event.description.toLowerCase().includes(term.toLowerCase())
    );

    
